extends layout

block content
  h1= title
  p Welcome to #{title}

  ul(id='chat-board' class='chat-board')
    if chatText
      each post in chatText
        li=post

  p(id="is-typing" class="is-typing")

  //- - var prevText = document.getElementById('board').innerHTML;
  form(autocomplete="off" id="chat-form")
    label(for='chat-box') What you gotta say?
      textarea(name='text' type='text' id='chat-input' class='chat-input' autocomplete="false" autofocus="on" placeholder="type your message here...")
    button(type='submit') Submit

  div(id="sign-in-container" class="sign-in-container")
    form(autocomplete="off" id="sign-in-form" class="sign-in-form")
      label(for='sign-in') Your username?
        input(name='text' type='text' id='username-input' class='username-input' autocomplete="false" autofocus="on" placeholder="Username")
      button(type='submit') Submit
